@model MiEcommApp.Models.ConferenceRegistration

<h2>Conference Registration</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" placeholder="Enter your first name. The Max words of this field are 100." title="First Name is required" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" placeholder="Enter your last name" title="Last Name is required" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email address" title="A valid email address is required" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" class="form-control" placeholder="Enter your birth date" title="Please provide your birth date" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Website"></label>
        <input asp-for="Website" class="form-control" placeholder="Enter your website URL (if any)" title="Website should be a valid URL" />
        <span asp-validation-for="Website" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bio"></label>
        <textarea asp-for="Bio" class="form-control" placeholder="Tell us something about yourself" title="This is a brief description about you"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" placeholder="Enter your phone number" title="Phone number is required" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Affiliation"></label>
        <input asp-for="Affiliation" class="form-control" placeholder="Enter your affiliation" title="Affiliation is required" />
        <span asp-validation-for="Affiliation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaperTitle"></label>
        <input asp-for="PaperTitle" class="form-control" placeholder="Enter the title of your paper" title="Paper title is required" />
        <span asp-validation-for="PaperTitle" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>

